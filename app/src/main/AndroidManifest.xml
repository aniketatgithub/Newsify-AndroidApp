<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aniket.tikariha.newsify">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/custom"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/custom_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Newsify">
        <activity
            android:name=".myAppIntro"
            android:label="@string/title_activity_my_app_intro"
            android:theme="@style/Theme.Newsify.NoActionBar"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>